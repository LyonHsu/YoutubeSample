<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="lyon.youtube.pi.test.youtubepi3sample.YoutubePlayer"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">



        <Button
            android:id="@+id/PreviousBtn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_light_blue"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Previous" />

        <Button
            android:id="@+id/PlayPauseBtn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/PreviousBtn"
            android:background="@drawable/btn_light_blue"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Play" />

        <Button
            android:id="@+id/NextBtn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/PlayPauseBtn"
            android:background="@drawable/btn_light_blue"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Next" />

        <Button
            android:id="@+id/loopBtn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_light_blue"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="LOOP" />
    </LinearLayout>

    <!--UNAUTHORIZED_OVERLAY if youtube play 2 sec stop that is because other view over youtubePlayerFragment-->
    <RelativeLayout
        android:id="@+id/youtubePlayerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="100dp"/>



</RelativeLayout>